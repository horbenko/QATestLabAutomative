<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "Test for automation">
    <test name = "Test with Edge browser">
        <parameter name = "selenium.browser" value="edge"/>
        <classes>
            <class name = "tests.Tests"></class>
        </classes>
    </test>
    <test name = "Test with Firefox browser">
        <parameter name = "selenium.browser" value="firefox"/>
        <classes>
            <class name = "tests.Tests"></class>
        </classes>
    </test>
    <test name = "Test with Chrome browser">
        <parameter name = "selenium.browser" value="chrome"/>
        <classes>
            <class name = "tests.Tests"></class>
        </classes>
    </test>
</suite>